{% extends 'base.html.twig' %}

{% block title %}Caja index{% endblock %}

{% block body %}
    <h1>Caja index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ingreso</th>
                <th>Egreso</th>
                <th>LlevaTicket</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for caja in cajas %}
            <tr>
                <td>{{ caja.id }}</td>
                <td>{{ caja.ingreso }}</td>
                <td>{{ caja.egreso }}</td>
                <td>{{ caja.llevaTicket ? 'Yes' : 'No' }}</td>
                <td>{{ caja.fecha ? caja.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('caja_show', {'id': caja.id}) }}">show</a>
                    <a href="{{ path('caja_edit', {'id': caja.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('caja_new') }}">Create new</a>
{% endblock %}
