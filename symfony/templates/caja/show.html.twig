{% extends 'base.html.twig' %}

{% block title %}Caja{% endblock %}

{% block body %}
    <h1>Caja</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ caja.id }}</td>
            </tr>
            <tr>
                <th>Ingreso</th>
                <td>{{ caja.ingreso }}</td>
            </tr>
            <tr>
                <th>Egreso</th>
                <td>{{ caja.egreso }}</td>
            </tr>
            <tr>
                <th>LlevaTicket</th>
                <td>{{ caja.llevaTicket ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ caja.fecha ? caja.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('caja_index') }}">back to list</a>

    <a href="{{ path('caja_edit', {'id': caja.id}) }}">edit</a>

    {{ include('caja/_delete_form.html.twig') }}
{% endblock %}
